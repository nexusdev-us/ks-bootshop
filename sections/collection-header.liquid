<header
  id="collection-header-{{ section.id }}"
  class="collection-header-elegant">

  {% if section.settings.img_show and collection.image != nil %}
    <div class="collection-header-bg">
      <img
        srcset="{{ collection.image | image_url: width: 800 }} 800w, {{ collection.image | image_url: width: 1600 }} 1600w, {{ collection.image | image_url: width: 2400 }} 2400w"
        src="{{ collection.image | image_url: width: 1600 }}"
        alt="{{ collection.image.alt | default: collection.title }}"
        width="1600"
        height="{{ 1600 | divided_by: collection.image.aspect_ratio }}"
        loading="eager">
    </div>
  {% endif %}

  <div class="collection-header-overlay"></div>

  <div class="collection-header-content">
    <h1 class="collection-header-title">
      {{ collection.title }}
    </h1>
    {% if section.settings.description_show and collection.description != blank %}
      <div class="collection-header-description rte">
        {{ collection.description }}
      </div>
    {% endif %}
  </div>
</header>

<style>
  .collection-header-elegant {
    position: relative;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  }

  @media (min-width: 768px) {
    .collection-header-elegant {
      min-height: 380px;
    }
  }

  @media (min-width: 1200px) {
    .collection-header-elegant {
      min-height: 450px;
    }
  }

  /* Background image */
  .collection-header-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .collection-header-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Dark gradient overlay */
  .collection-header-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.35) 0%,
      rgba(0, 0, 0, 0.55) 50%,
      rgba(0, 0, 0, 0.75) 100%
    );
    z-index: 2;
  }

  /* Content */
  .collection-header-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Title - clean white text, no box */
  .collection-header-title {
    color: #ffffff;
    font-size: 2.25rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
    letter-spacing: 0.01em;
    line-height: 1.2;
    animation: collectionFadeUp 0.6s ease-out both;
  }

  @media (min-width: 768px) {
    .collection-header-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1200px) {
    .collection-header-title {
      font-size: 3.5rem;
    }
  }

  /* Decorative accent line */
  .collection-header-title::after {
    content: "";
    display: block;
    width: 70px;
    height: 3px;
    background: linear-gradient(90deg, #a78bfa 0%, #8b5cf6 100%);
    margin: 1.25rem auto 0;
    border-radius: 2px;
    animation: collectionFadeUp 0.6s ease-out 0.1s both;
  }

  /* Description */
  .collection-header-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.05rem;
    line-height: 1.7;
    max-width: 550px;
    margin: 1.25rem auto 0;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.3);
    animation: collectionFadeUp 0.6s ease-out 0.2s both;
  }

  .collection-header-description p {
    margin: 0;
  }

  @media (min-width: 768px) {
    .collection-header-description {
      font-size: 1.15rem;
    }
  }

  @keyframes collectionFadeUp {
    from {
      opacity: 0;
      transform: translateY(25px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

{% schema %}
{
  "name": "Collection header",
  "settings": [
    {
      "type": "header",
      "content": "Collection image"
    },
    {
      "type": "checkbox",
      "id": "img_show",
      "label": "Show collection image",
      "default": true
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "checkbox",
      "id": "description_show",
      "label": "Show collection description",
      "default": true
    }
  ],
  "templates": ["collection"],
  "presets": [
    {
      "name": "Collection header"
    }
  ]
}
{% endschema %}
