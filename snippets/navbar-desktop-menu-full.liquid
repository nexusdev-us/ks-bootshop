<ul class="nav-desktop-menu nav justify-content-center">
  {% for link in linklists[block.settings.main_menu].links %}
    <li class="nav-item {% if link.links %}dropdown{% endif %}">
      {% if link.links == blank %}
        <a
          class="nav-link {% if link.active %}active{% endif %}"
          href="{{ link.url }}"
          aria-current="{% if link.active %}page{% endif %}">
          {{ link.title }}
        </a>
      {% else %}
        <a
          class="nav-link dropdown-toggle {% if link.child_active %}active{% endif %}"
          href="#"
          data-bs-toggle="dropdown"
          aria-expanded="false"
          role="button">
          {{ link.title }}
        </a>
        <ul class="dropdown-menu">
          {% for child_link in link.links %}
            {% if child_link.title == '-' %}
              <li><hr class="dropdown-divider"></li>
            {% else %}
              <li class="{% if child_link.links %}dropdown-submenu{% endif %}">
                {% if child_link.links == blank %}
                  <a
                    class="dropdown-item {% if child_link.active %}active{% endif %}"
                    href="{{ child_link.url }}"
                    aria-current="{% if child_link.active %}page{% endif %}">
                    {{ child_link.title }}
                  </a>
                {% else %}
                  <a
                    class="dropdown-item dropdown-toggle {% if child_link.active %}active{% endif %}"
                    href="{{ child_link.url }}">
                    {{ child_link.title }}
                  </a>
                  <ul class="dropdown-menu dropdown-submenu-menu">
                    {% for grandchild_link in child_link.links %}
                      <li>
                        {% if grandchild_link.title == '-' %}
                          <hr class="dropdown-divider">
                        {% else %}
                          <a
                            class="dropdown-item {% if grandchild_link.active %}active{% endif %}"
                            href="{{ grandchild_link.url }}"
                            aria-current="{% if grandchild_link.active %}page{% endif %}">
                            {{ grandchild_link.title }}
                          </a>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>