        {% endif %}

        {% if block.settings.decoration_right %}
          <img
            src="{{ block.settings.decoration_right | image_url: width: 200 }}"
            alt="Holiday decoration"
            class="ai-holiday-popup-decor-image-{{ ai_gen_id }} ai-holiday-popup-decor-right-{{ ai_gen_id }}"
            loading="lazy"
          >
        {% endif %}

        {% if block.settings.decoration_top_left %}
          <img
            src="{{ block.settings.decoration_top_left | image_url: width: 150 }}"
            alt="Holiday decoration"
            class="ai-holiday-popup-decor-image-{{ ai_gen_id }} ai-holiday-popup-decor-top-left-{{ ai_gen_id }}"
            loading="lazy"
          >
        {% endif %}

        {% if block.settings.decoration_top_right %}
          <img
            src="{{ block.settings.decoration_top_right | image_url: width: 150 }}"
            alt="Holiday decoration"
            class="ai-holiday-popup-decor-image-{{ ai_gen_id }} ai-holiday-popup-decor-top-right-{{ ai_gen_id }}"
            loading="lazy"
