{% doc %}
  @prompt
    generate a section that lists all the products in a collection multi make it very nice looking and elegant
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-grid__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-grid__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-collection-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  .ai-collection-grid__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-collection-grid__products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.products_spacing }}px;
  }

  .ai-collection-grid__product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-collection-grid__product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-collection-grid__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-collection-grid__image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-grid__product-card-{{ ai_gen_id }}:hover .ai-collection-grid__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-grid__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
  }

  .ai-collection-grid__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.card_text_align }};
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-collection-grid__vendor-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.vendor_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
    font-weight: 500;
  }

  .ai-collection-grid__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    line-height: 1.4;
    flex-grow: 1;
  }

  .ai-collection-grid__product-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-collection-grid__product-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-collection-grid__price-wrapper-{{ ai_gen_id }} {
    margin-bottom: 16px;
  }

  .ai-collection-grid__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 700;
  }

  .ai-collection-grid__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size | minus: 2 }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    margin-left: 8px;
    opacity: 0.7;
  }

  .ai-collection-grid__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background }};
    width: 100%;
    text-align: center;
  }

  .ai-collection-grid__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
  }

  .ai-collection-grid__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collection-grid__empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  .ai-collection-grid__empty-message-{{ ai_gen_id }} {
    font-size: 18px;
    color: #999;
  }

  .ai-collection-grid__view-all-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.view_all_spacing }}px;
  }

  .ai-collection-grid__view-all-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: transparent;
    color: {{ block.settings.button_background }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background }};
  }

  .ai-collection-grid__view-all-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
  }

  @media (max-width: 991px) {
    .ai-collection-grid__products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media (max-width: 767px) {
    .ai-collection-grid__products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-collection-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-collection-grid__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-collection-grid__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collection-grid__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-collection-grid__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign products_to_show = block.settings.products_limit %}

      {% if collection.products.size > 0 %}
        <div class="ai-collection-grid__products-{{ ai_gen_id }}">
          {% for product in collection.products limit: products_to_show %}
            <div class="ai-collection-grid__product-card-{{ ai_gen_id }}">
              <div class="ai-collection-grid__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-collection-grid__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}

                {% if product.compare_at_price > product.price and block.settings.show_sale_badge %}
                  <div class="ai-collection-grid__badge-{{ ai_gen_id }}">
                    {{ block.settings.sale_badge_text }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-collection-grid__content-{{ ai_gen_id }}">
                {% if block.settings.show_vendor and product.vendor != blank %}
                  <div class="ai-collection-grid__vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
                {% endif %}

                <h3 class="ai-collection-grid__product-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}" class="ai-collection-grid__product-title-link-{{ ai_gen_id }}">
                    {{ product.title }}
                  </a>
                </h3>

                {% if block.settings.show_price %}
                  <div class="ai-collection-grid__price-wrapper-{{ ai_gen_id }}">
                    <span class="ai-collection-grid__price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-collection-grid__compare-price-{{ ai_gen_id }}">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_button %}
                  <a href="{{ product.url }}" class="ai-collection-grid__button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_view_all and collection.products.size > products_to_show %}
          <div class="ai-collection-grid__view-all-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-collection-grid__view-all-button-{{ ai_gen_id }}">
              {{ block.settings.view_all_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-collection-grid__empty-state-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
          <p class="ai-collection-grid__empty-message-{{ ai_gen_id }}">This collection is empty</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-collection-grid__empty-state-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <p class="ai-collection-grid__empty-message-{{ ai_gen_id }}">Select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</div>

