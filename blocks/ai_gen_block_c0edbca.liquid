{% doc %}
  @prompt
    Generate header for Aromatherapy, talk about its uses and how it can benefit people. Make the header elegant with a bottom border
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-aromatherapy-header-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-bottom: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-aromatherapy-header__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-aromatherapy-header__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: {{ block.settings.title_weight }};
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    text-transform: {{ block.settings.title_transform }};
    line-height: 1.2;
  }

  .ai-aromatherapy-header__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0 0 {{ block.settings.subtitle_spacing }}px;
    font-style: {{ block.settings.subtitle_style }};
    line-height: 1.4;
  }

  .ai-aromatherapy-header__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .ai-aromatherapy-header__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }

    .ai-aromatherapy-header__subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.8);
    }

    .ai-aromatherapy-header__description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-aromatherapy-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-aromatherapy-header__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h1 class="ai-aromatherapy-header__title-{{ ai_gen_id }}">
        {{ block.settings.title }}
      </h1>
    {% endif %}

    {% if block.settings.subtitle != blank %}
      <div class="ai-aromatherapy-header__subtitle-{{ ai_gen_id }}">
        {{ block.settings.subtitle }}
      </div>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-aromatherapy-header__description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}
  </div>
</div>

