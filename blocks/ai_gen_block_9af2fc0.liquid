{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-all-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-all-products-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-all-products-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-all-products-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
  }

  .ai-all-products-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-all-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  @media (max-width: 768px) {
    .ai-all-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .ai-product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: 16px;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-product-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.title_color }};
  }

  .ai-product-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 10px 16px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .ai-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-pagination-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    margin-top: 40px;
  }

  .ai-pagination-button-{{ ai_gen_id }} {
    padding: 10px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-pagination-button-{{ ai_gen_id }}:hover:not(:disabled) {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-pagination-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-pagination-info-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.description_color }};
  }

  .ai-loading-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px;
    font-size: 16px;
    color: {{ block.settings.description_color }};
  }

  .ai-no-products-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    font-size: 18px;
    color: {{ block.settings.description_color }};
  }
{% endstyle %}

<all-products-{{ ai_gen_id }} class="ai-all-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-all-products-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-all-products-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-all-products-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <p class="ai-all-products-description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-all-products-grid-{{ ai_gen_id }}" data-products-grid></div>

    <div class="ai-loading-{{ ai_gen_id }}" data-loading style="display: none;">
      Loading products...
    </div>

    <div class="ai-no-products-{{ ai_gen_id }}" data-no-products style="display: none;">
      No products found.
    </div>

    <div class="ai-pagination-{{ ai_gen_id }}" data-pagination style="display: none;">
      <button class="ai-pagination-button-{{ ai_gen_id }}" data-prev-button>Previous</button>
      <span class="ai-pagination-info-{{ ai_gen_id }}" data-page-info></span>
      <button class="ai-pagination-button-{{ ai_gen_id }}" data-next-button>Next</button>
    </div>
  </div>
</all-products-{{ ai_gen_id }}>

<script>
  (function() {
    class AllProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentPage = 1;
        this.productsPerPage = {{ block.settings.products_per_page }};
        this.allProducts = [];
        this.totalProducts = 0;
        
        this.grid = this.querySelector('[data-products-grid]');
        this.loading = this.querySelector('[data-loading]');
        this.noProducts = this.querySelector('[data-no-products]');
        this.pagination = this.querySelector('[data-pagination]');
        this.prevButton = this.querySelector('[data-prev-button]');
        this.nextButton = this.querySelector('[data-next-button]');
        this.pageInfo = this.querySelector('[data-page-info]');
      }

      connectedCallback() {
        this.fetchAllProducts();
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => {
          if (this.currentPage > 1) {
            this.currentPage--;
            this.renderProducts();
            this.scrollToTop();
          }
        });

        this.nextButton.addEventListener('click', () => {
          const totalPages = Math.ceil(this.totalProducts / this.productsPerPage);
          if (this.currentPage < totalPages) {
            this.currentPage++;
            this.renderProducts();
            this.scrollToTop();
          }
        });
      }

      scrollToTop() {
        this.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }

      async fetchAllProducts() {
        this.showLoading();
        let page = 1;
        let hasMore = true;

        try {
          while (hasMore) {
            const response = await fetch(`/collections/all/products.json?limit=250&page=${page}`);
            const data = await response.json();
            
            if (data.products && data.products.length > 0) {
              this.allProducts = this.allProducts.concat(data.products);
              page++;
              
              if (data.products.length < 250) {
                hasMore = false;
              }
            } else {
              hasMore = false;
            }
          }

          this.totalProducts = this.allProducts.length;
          
          if (this.totalProducts > 0) {
            this.renderProducts();
          } else {
            this.showNoProducts();
          }
        } catch (error) {
          console.error('Error fetching products:', error);
          this.showNoProducts();
        }
      }

      renderProducts() {
        this.hideLoading();
        this.grid.innerHTML = '';

        const startIndex = (this.currentPage - 1) * this.productsPerPage;
        const endIndex = startIndex + this.productsPerPage;
        const productsToShow = this.allProducts.slice(startIndex, endIndex);

        productsToShow.forEach(product => {
          const productCard = this.createProductCard(product);
          this.grid.appendChild(productCard);
        });

        this.updatePagination();
      }

      createProductCard(product) {
        const card = document.createElement('div');
        card.className = 'ai-product-card-{{ ai_gen_id }}';

        const imageUrl = product.images && product.images.length > 0 
          ? product.images[0].src 
          : '';

        const variant = product.variants && product.variants.length > 0 
          ? product.variants[0] 
          : null;

        const compareAtPrice = variant ? variant.compare_at_price : null;
        const price = variant ? variant.price : 0;

        const isOnSale = compareAtPrice && parseInt(compareAtPrice) > parseInt(price);

        card.innerHTML = `
          <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
            ${imageUrl ? `<img src="${imageUrl}" alt="${this.escapeHtml(product.title)}" class="ai-product-image-{{ ai_gen_id }}" loading="lazy">` : ''}
            ${isOnSale ? `<span class="ai-product-badge-{{ ai_gen_id }}">Sale</span>` : ''}
          </div>
          <div class="ai-product-info-{{ ai_gen_id }}">
            <h3 class="ai-product-title-{{ ai_gen_id }}">
              <a href="/products/${product.handle}" class="ai-product-title-link-{{ ai_gen_id }}">
                ${this.escapeHtml(product.title)}
              </a>
            </h3>
            <a href="/products/${product.handle}" class="ai-product-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        `;

        return card;
      }

      escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }

      updatePagination() {
        const totalPages = Math.ceil(this.totalProducts / this.productsPerPage);
        
        this.prevButton.disabled = this.currentPage === 1;
        this.nextButton.disabled = this.currentPage === totalPages;
        
        this.pageInfo.textContent = `Page ${this.currentPage} of ${totalPages} (${this.totalProducts} products)`;
        
        this.pagination.style.display = totalPages > 1 ? 'flex' : 'none';
      }

      showLoading() {
        this.loading.style.display = 'block';
        this.grid.style.display = 'none';
        this.pagination.style.display = 'none';
        this.noProducts.style.display = 'none';
      }

      hideLoading() {
        this.loading.style.display = 'none';
        this.grid.style.display = 'grid';
      }

      showNoProducts() {
        this.loading.style.display = 'none';
        this.grid.style.display = 'none';
        this.pagination.style.display = 'none';
        this.noProducts.style.display = 'block';
      }
    }

    customElements.define('all-products-{{ ai_gen_id }}', AllProducts{{ ai_gen_id }});
  })();
</script>

