{% doc %}
  @prompt
    Generate elegant product cards that I can showcase multiple collections
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-cards-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-collection-cards__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-collection-cards__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-collection-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    background: {{ block.settings.card_background }};
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px {{ block.settings.card_shadow_color }};
  }

  .ai-collection-card__link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-collection-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-collection-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover .ai-collection-card__image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.image_zoom }});
  }

  .ai-collection-card__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    transition: opacity 0.3s ease;
  }

  .ai-collection-card-{{ ai_gen_id }}:hover .ai-collection-card__overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_hover_opacity }};
  }

  .ai-collection-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.content_alignment }};
  }

  .ai-collection-card__title-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    font-weight: {{ block.settings.title_weight }};
  }

  .ai-collection-card__description-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.description_spacing }}px;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
  }

  .ai-collection-card__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    color: {{ block.settings.count_color }};
    margin-bottom: {{ block.settings.count_spacing }}px;
  }

  .ai-collection-card__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-collection-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-collection-card__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-collection-card__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-cards__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-cards__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-collection-cards__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-collection-card__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-cards-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="container" style="max-width: {{ block.settings.container_width }}px;">
    {% if block.settings.heading != blank %}
      <h2 class="ai-collection-cards__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <ul class="ai-collection-cards__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection = block.settings[collection_key]
        %}

        {% if collection != blank %}
          <li class="ai-collection-card-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-collection-card__link-{{ ai_gen_id }}">
              <div class="ai-collection-card__image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    class="ai-collection-card__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% else %}
                  <div class="ai-collection-card__placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
                <div class="ai-collection-card__overlay-{{ ai_gen_id }}"></div>
              </div>

              <div class="ai-collection-card__content-{{ ai_gen_id }}">
                <h3 class="ai-collection-card__title-{{ ai_gen_id }}">{{ collection.title }}</h3>

                {% if block.settings.show_description and collection.description != blank %}
                  <div class="ai-collection-card__description-{{ ai_gen_id }}">
                    {{ collection.description | strip_html | truncate: 120 }}
                  </div>
                {% endif %}

                {% if block.settings.show_product_count %}
                  <div class="ai-collection-card__count-{{ ai_gen_id }}">
                    {{ collection.products_count }}
                    {% if collection.products_count == 1 %}
                      {{ block.settings.product_singular }}
                    {% else %}
                      {{ block.settings.product_plural }}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_button %}
                  <span class="ai-collection-card__button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </span>
                {% endif %}
              </div>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

